<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="osoc.leiedal.android.aandacht.View.ViewProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/profile_banner"
            android:text="@string/profile_banner"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_picture"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profilepic"
            android:onClick="changePhoto"
            android:background="@null"
            android:layout_margin="10dp"
        />

        <fragment
            android:name="osoc.leiedal.android.aandacht.View.fragments.StatsTabFragment"
            android:id="@+id/stats_fragment"
            tools:layout="@layout/fragment_stats_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</RelativeLayout>