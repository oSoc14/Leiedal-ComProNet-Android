<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.fragments.StatsTabFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtavgtimeres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="Roboto Light"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="@string/stats_title_response"
                android:textColor="@color/aandacht_dark_blue"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/avg_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:src="@drawable/icon_average_response_time" />

            <TextView
                android:id="@+id/avg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="Roboto Light"
                android:gravity="center_horizontal"
                android:textColor="@color/aandacht_light_blue"
                android:textSize="12pt"
                android:textStyle="bold"
                tools:text="@string/stats_value_response" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txttottimeactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="Roboto Light"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="@string/stats_title_active"
                android:textColor="@color/aandacht_dark_blue"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/active_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:gravity="center"
                android:src="@drawable/icon_total_time_active" />

            <TextView
                android:id="@+id/total_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="Roboto Light"
                android:gravity="center_horizontal"
                android:textColor="@color/aandacht_light_blue"
                android:textSize="12pt"
                android:textStyle="bold"
                tools:text="@string/stats_value_active" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
